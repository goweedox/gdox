<div id="controls" class="controls">
  <ul>
		<li id="control"> <%= image_tag("controls/controls.png", :border=>0) %> </li>
		<li id="add"> <%= image_tag("controls/add.png", :border=>0) %> </li>
		<li id="screenie"> <%= image_tag("controls/screenie.png", :border=>0) %></li>
		<li id="up"> <%= image_tag("controls/up.png", :border=>0) %></li>
		<li id="view"> <%= image_tag("controls/view.png", :border=>0) %> </li>
		<li id="arrow"> <%= image_tag("arrow.png", :border=>0) %></li>
	</ul>
</div>

<div id="content_container2">
<div id="content_container">
	<div id="about_dox">

		<% @creator = User.find(@documentation.user_id) %>
		<div id="title" class="about_dox"> <%= in_place_text_field :documentation, 'title' %></div><br/>
		<div id="info" class="about_dox"> <i><%= in_place_text_area :documentation, 'description' %></i> </div> 
		<div id="mode_button"><%= link_to 'Save', :controller => "documentations", :action => "#{@documentation.id}" %></div>
	</div>

	<div id="screenie_area" class="content">
		<div id="upload_panel">
			<% form_for @documentation, :html => { :multipart => true } do |f| %>
				<%= add_screenshot(f) %><br/><br/>
			<% end %>
		</div>

		<%= render :partial => 'anno_screenshots' %>     
	</div>

	<div id="lessons_area" class="content">

	</div>

	<div style="clear:both;"></div>
</div>
</div>
